generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("VIEWER")
  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Org {
  id        String       @id @default(uuid())
  name      String
  locale    String       @default("en")
  currency  String       @default("USD")
  users     User[]
  imports   DataImport[]
  shipments Shipment[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

// Flexible data storage - accepts ANY columns from Excel
model DataImport {
  id        String    @id @default(uuid())
  orgId     String
  org       Org       @relation(fields: [orgId], references: [id])
  fileName  String
  fileType  String
  rowCount  Int
  columns   String    // JSON array of column names
  rows      DataRow[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([orgId])
}

model DataRow {
  id        String     @id @default(uuid())
  importId  String
  import    DataImport @relation(fields: [importId], references: [id], onDelete: Cascade)
  data      String     // JSON object with all column values
  shipments Shipment[]
  createdAt DateTime   @default(now())

  @@index([importId])
}

model Shipment {
  id              String   @id @default(uuid())
  orgId           String
  org             Org      @relation(fields: [orgId], references: [id])
  coffeeRowId     String
  coffeeRow       DataRow  @relation(fields: [coffeeRowId], references: [id])
  containerNo     String?
  vessel          String?
  portOfLoading   String?
  portOfDischarge String?
  etd             DateTime?
  eta             DateTime?
  billOfLading    String?
  status          String   @default("PREPARING")
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([orgId])
  @@index([coffeeRowId])
}
